<div class="half-page">
  <h2 class="big">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <p><%= f.label :email, :class => "spaced" %><br />
      <%= f.email_field :email, autofocus: true %></p>
    </div>

    <div class="field">
      <p><%= f.label :password, :class => "spaced" %><br />
      <%= f.password_field :password, autocomplete: "off" %></p>
    </div>

    <div class="actions">
      <%= f.submit "Log in", :class => "blue-button login" %>
    </div>
  <% end %>
</div>

<div class="half-page">
  <p class="big">Guest info</p>
  <div class="registration">
    <p>Email - guest@gmail.com</p>
    <p>Password - battleship</p>
  </div>
  <p class="spaced">Or <%= link_to "Sign up", new_registration_path(resource_name) %>!</p>
</div>
