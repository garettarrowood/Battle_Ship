<h2 class="big">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <p><%= f.label :email, :class => "spaced" %><br />
    <%= f.email_field :email, autofocus: true %></p>
  </div>

  <div class="field">
    <p><%= f.label :password, :class => "spaced" %><br />
    <%= f.password_field :password, autocomplete: "off" %></p>
  </div>

  <div class="actions">
    <%= f.submit "Log in", :class => "blue-button login" %>
  </div>
<% end %>
<p class="spaced">First time here?<br><%= link_to "Sign up", new_registration_path(resource_name) %></p>
